{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/examples/tauri/src-tauri/tauri.conf.json",
  "productName": "Thronglets",
  "version": "0.1.0",
  "identifier": "com.claude-agents.thronglets",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "title": "Thronglets",
    "windows": [
      {
        "title": "Thronglets",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
